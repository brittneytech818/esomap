---
import HeaderNav from "@/components/HeaderNav.astro";
import HeaderMeta from "@/components/HeaderMeta.astro";
import { SITE_TITLE, SITE_DESCRIPTION, CDN_URL, ESO_API_URL } from "@/consts";
import Footer from "@/components/Footer.astro";
import ScrollToTop from "@/components/ScrollToTop.astro";
import { md2html } from "@/utils";

const { slug } = Astro.params;

const query = new URLSearchParams();
query.set("pagination[pageSize]", "1");
query.set("pagination[page]", "1");
query.set("filters[slug][$eq]", slug!);

const response = await fetch(`${ESO_API_URL}/api/newslist?${query}`);
const { data } = await response.json();

if (data == null || data.length === 0) {
  return Astro.redirect("/404");
}

const { attributes } = data[0];
const content = md2html(attributes.content);
---

<html lang="zh-CN">
  <head>
    <HeaderMeta title={`攻略 - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    <link rel="stylesheet" href={`${CDN_URL}/assets/gfm-fba346.css`} />
  </head>

  <body>
    <HeaderNav />
    <main class="max-w-screen-xl mx-auto grid grid-cols-1 md:grid-cols-4">
      <article class="p-6 md:col-span-3">
        <h1 class="text-4xl text-gray-900 font-bold">{attributes.title}</h1>
        <div class="flex items-center mt-4">
          {
            attributes.tags &&
              attributes.tags.map((tag: string) => (
                <a
                  href={`#${tag}`}
                  class="mx-1 text-gray-500 text-sm hover:text-gray-700"
                >
                  {tag}
                </a>
              ))
          }
        </div>
        {
          attributes.image && (
            <img class="my-4 shadow-gray-300" src={attributes.image} alt="" />
          )
        }
        <div class="markdown-body">
          <p class="text-gray-500">{attributes.description}</p>
          <div set:html={content} />
        </div>
      </article>
      <aside class="p-6 md:col-span-1">
        <h2 class="text-2xl text-gray-900 font-bold">侧边栏</h2>
      </aside>
    </main>
    <Footer />
    <ScrollToTop />
  </body>
</html>
