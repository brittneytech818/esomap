{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env --watch=./server/entry.mjs ./server/entry.mjs",
    "preview": "deno run --allow-net --allow-read --allow-env ./dist/server/entry.mjs",
    "html2md": "deno run --allow-net --allow-read --allow-write ./scripts/html2md.ts",
    "contributors": "deno run --allow-net --allow-read --allow-write ./scripts/contributors.ts",
    "npm:add": "deno run -A https://esm.sh/v99 add",
    "npm:update": "deno run -A https://esm.sh/v99 update",
    "npm:remove": "deno run -A https://esm.sh/v99 remove"
  },
  "fmt": {
    "options": {
      "lineWidth": 120
    },
    "files": {
      "exclude": [
        "node_modules",
        "dist",
        "public"
      ]
    }
  },
  "lint": {
    "files": {
      "exclude": [
        "node_modules",
        "dist",
        "public"
      ]
    }
  },
  "importMap": "import_map.json"
}
